{
  "name": "mutual-funds-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for mutual fund platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "dotenv -e .env.local -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "node dist/worker.js",
    "worker:dev": "tsx watch src/worker.ts",
    "worker:local": "dotenv -e .env.local -- tsx watch src/worker.ts",
    "scheduler": "tsx src/scripts/start-scheduler.ts",
    "scheduler:dev": "tsx watch src/scripts/start-scheduler.ts",
    "scheduler:local": "dotenv -e .env.local -- tsx watch src/scripts/start-scheduler.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:push:local": "dotenv -e .env.local -- prisma db push",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:local": "dotenv -e .env.local -- tsx src/db/seed.ts",
    "setup:local": "tsx src/scripts/setup-local-mongodb.ts",
    "test:redis": "tsx src/scripts/test-redis.ts",
    "ingest:amfi": "tsx src/scripts/ingest-amfi-data.ts",
    "ingest:amfi:local": "dotenv -e .env.local -- tsx src/scripts/ingest-amfi-data.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mutual-funds",
    "backend",
    "api",
    "typescript",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.15.4",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^10.5.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.48",
    "mongodb": "^6.20.0",
    "node-fetch": "^3.3.2",
    "openai": "^6.8.1",
    "resend": "^2.1.0",
    "socket.io": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.24",
    "@types/node-fetch": "^2.6.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
