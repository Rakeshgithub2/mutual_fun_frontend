# Database - MongoDB
# Local MongoDB
DATABASE_URL="mongodb://localhost:27017/mutual_funds_db"

# Or MongoDB Atlas (Cloud)
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/mutual_funds_db?retryWrites=true&w=majority"

# Or Docker MongoDB
# DATABASE_URL="mongodb://admin:password123@localhost:27017/mutual_funds_db?authSource=admin"

# JWT Secrets (generate strong secrets for production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this-in-production"

# Server
PORT=3000
NODE_ENV=development

# Redis URL (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Yahoo Finance API via RapidAPI
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_HOST=apidojo-yahoo-finance-v1.p.rapidapi.com

# Resend Email Service
RESEND_API_KEY=your-resend-api-key-here

# NewsData.io API
NEWSDATA_API_KEY=your-newsdata-api-key-here

# AMFI Data Source
AMFI_NAV_URL=https://www.amfiindia.com/spages/NAVAll.txt

# Optional: Email service configuration (for verification emails)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password